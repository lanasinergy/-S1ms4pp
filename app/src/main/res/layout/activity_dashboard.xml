<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/graphContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                tools:ignore="MissingConstraints">


                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:columnCount="2"
                    android:rowCount="2">

                    <RelativeLayout>

                        <ImageView
                            android:layout_width="180dp"
                            android:layout_height="125dp"
                            android:layout_marginLeft="0dp"
                            android:layout_marginTop="0dp"
                            app:srcCompat="@drawable/bg_lead_dash" />

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_marginLeft="90dp"
                            android:layout_marginTop="10dp"
                            app:srcCompat="@drawable/task" />

                        <TextView
                            android:id="@+id/lead_register"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:text="372"
                            android:textColor="@android:color/black"
                            android:textSize="30dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="50dp"
                            android:text="Lead Register"
                            android:textColor="@android:color/black"
                            android:textSize="13dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="90dp"
                            android:text="See more.."
                            android:textColor="@android:color/white"
                            android:textSize="10dp" />

                    </RelativeLayout>

                    <RelativeLayout>

                        <ImageView
                            android:layout_width="180dp"
                            android:layout_height="125dp"
                            android:layout_marginTop="0dp"
                            app:srcCompat="@drawable/bg_open" />

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_marginLeft="90dp"
                            android:layout_marginTop="10dp"
                            app:srcCompat="@drawable/bg_open_dashboard" />

                        <TextView
                            android:id="@+id/open"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:text="153"
                            android:textColor="@android:color/black"
                            android:textSize="30dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="50dp"
                            android:text="Open"
                            android:textColor="@android:color/black"
                            android:textSize="13dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="90dp"
                            android:text="See more.."
                            android:textColor="@android:color/white"
                            android:textSize="10dp" />

                    </RelativeLayout>

                    <RelativeLayout>

                        <ImageView
                            android:layout_width="180dp"
                            android:layout_height="125dp"
                            android:layout_marginLeft="0dp"
                            android:layout_marginTop="0dp"
                            app:srcCompat="@drawable/bg_win" />

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_marginLeft="90dp"
                            android:layout_marginTop="10dp"
                            app:srcCompat="@drawable/win" />

                        <TextView
                            android:id="@+id/win"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:text="372"
                            android:textColor="@android:color/black"
                            android:textSize="30dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="50dp"
                            android:text="Win"
                            android:textColor="@android:color/black"
                            android:textSize="13dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="90dp"
                            android:text="See more.."
                            android:textColor="@android:color/white"
                            android:textSize="10dp" />

                    </RelativeLayout>

                    <RelativeLayout>

                        <ImageView
                            android:layout_width="180dp"
                            android:layout_height="125dp"
                            android:layout_marginTop="0dp"
                            app:srcCompat="@drawable/bg_lose" />

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_marginLeft="90dp"
                            android:layout_marginTop="10dp"
                            app:srcCompat="@drawable/lose" />

                        <TextView
                            android:id="@+id/lose"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:text="153"
                            android:textColor="@android:color/black"
                            android:textSize="30dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="50dp"
                            android:text="Lose"
                            android:textColor="@android:color/black"
                            android:textSize="13dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="90dp"
                            android:text="See more.."
                            android:textColor="@android:color/white"
                            android:textSize="10dp" />

                    </RelativeLayout>

                </GridLayout>

            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_margin="10dp"
                android:layout_weight="1">

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/pieChart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_margin="10dp"
                android:layout_weight="1">

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/lineChart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_margin="10dp"
                android:layout_weight="1">

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/barChart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>