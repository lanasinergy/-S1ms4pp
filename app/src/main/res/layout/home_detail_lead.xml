<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingRight="16dp">

        <TextView
            android:id="@+id/lead_id"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Lead Id"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/opty_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Lead Id"
            android:textColor="@color/colorAccent" />

        <EditText
            android:id="@+id/edit_lead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <EditText
            android:id="@+id/edit_opp_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Edit Oopty Name" />

        <EditText
            android:id="@+id/edit_closing_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Edit Closing Date" />

        <Button
            android:id="@+id/btnEditLead"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark"
            android:text="Edit"
            android:textColor="@color/cardview_light_background" />
    </LinearLayout>

</androidx.core.widget.NestedScrollView>