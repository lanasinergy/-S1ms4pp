                        <RelativeLayout>

                            <ImageView
                                android:layout_width="180dp"
                                android:layout_height="125dp"
                                android:layout_marginLeft="0dp"
                                android:layout_marginTop="0dp"
                                app:srcCompat="@drawable/bg_lead_dash" />

